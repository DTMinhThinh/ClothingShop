@page
@model ClothingStoreAppUI.Pages.Roles.ListModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-2">
    <div class="container">
        <h4>List role</h4>
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Role Name</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model.Roles)
            {
                <tr>
                    <td>@role.RoleId</td>
                    <td>@role.RoleName</td>
                    <td><a href="/Roles/Edit/@role.RoleId" class="btn btn-warning btn-sm">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
