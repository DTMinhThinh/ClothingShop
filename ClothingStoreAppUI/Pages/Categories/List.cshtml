@page
@model ClothingStoreAppUI.Pages.Categories.ListModel
@{
}
<div class="bg-secondary bg-opacity-10 py-2 mb-2">
    <div class="container">
        <h4>List Category</h4>
    </div>
</div>
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <td>Id</td>
                <td>Category Name</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.CategoryId</td>
                    <td>@category.CategoryName</td>
                    <td><a href="/Categories/Edit/@category.CategoryId" class="btn btn-warning btn-sm">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
